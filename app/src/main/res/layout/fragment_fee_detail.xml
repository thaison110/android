<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/size_16"
    android:paddingTop="@dimen/size_21">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_fee"
        android:textColor="@color/gray_232323"
        android:drawablePadding="@dimen/size_8"
        android:drawableStart="@drawable/ic_left_arrow"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_boder_radius_8"
        android:drawableEnd="@drawable/ic_down_arrow"
        android:drawablePadding="@dimen/size_8"
        android:paddingHorizontal="@dimen/size_8"
        android:paddingVertical="@dimen/size_4"
        android:text="Năm 2022"
        android:textColor="@color/blue_005CC8"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_label" />

    <TextView
        android:id="@+id/tv_fee_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:text="Chi tiết Học phí kỳ II - 20220"
        android:textColor="@color/gray_232323"
        android:textSize="@dimen/text_size_24"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_fee_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:background="@drawable/bg_gray_boder_radius_12"
        android:paddingHorizontal="@dimen/size_20"
        android:paddingVertical="@dimen/size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fee_name_detail">

        <TextView
            android:id="@+id/tv_class_name_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:text="Mẫu giáo bé"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_class_name_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_class_name_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="3 đến 4 tuổi"
            android:textColor="@color/orange_FF7917"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_class_name_label"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_dotted_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/dotted_line"
            app:layout_constraintTop_toBottomOf="@id/tv_class_name_value" />

        <TextView
            android:id="@+id/tv_month_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Thu theo tháng"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_dotted_line" />

        <TextView
            android:id="@+id/tv_fee_tuition_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Tiền học"
            android:textColor="@color/gray_828282"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_fee_tuition_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_month_label" />

        <TextView
            android:id="@+id/tv_fee_tuition_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="end"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_class_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_month_label" />

        <TextView
            android:id="@+id/tv_fee_eat_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Tiền ăn"
            android:textColor="@color/gray_828282"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_fee_eat_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fee_tuition_label" />

        <TextView
            android:id="@+id/tv_fee_eat_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="end"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_fee_eat_label"
            app:layout_constraintTop_toBottomOf="@id/tv_fee_tuition_label" />

        <TextView
            android:id="@+id/tv_month_number_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Số tháng"
            android:textColor="@color/gray_828282"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_month_number_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fee_eat_label" />

        <TextView
            android:id="@+id/tv_month_number_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="end"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_month_number_label"
            app:layout_constraintTop_toBottomOf="@id/tv_fee_eat_label" />

        <TextView
            android:id="@+id/tv_fee_surcharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Phụ thu thêm"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_month_number_label" />

        <TextView
            android:id="@+id/tv_learn_tools_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Dụng cụ học tập"
            android:textColor="@color/gray_828282"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_learn_tools_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fee_surcharge" />

        <TextView
            android:id="@+id/tv_learn_tools_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="end"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_learn_tools_label"
            app:layout_constraintTop_toBottomOf="@id/tv_fee_surcharge" />

        <TextView
            android:id="@+id/tv_fee_picnic_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Chi phí dã ngoại"
            android:textColor="@color/gray_828282"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_fee_picnic_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_learn_tools_label" />

        <TextView
            android:id="@+id/tv_fee_picnic_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="end"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_fee_picnic_label"
            app:layout_constraintTop_toBottomOf="@id/tv_learn_tools_label" />

        <View
            android:id="@+id/view_dotted_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/dotted_line"
            app:layout_constraintTop_toBottomOf="@id/tv_fee_picnic_label" />

        <TextView
            android:id="@+id/tv_total_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Tổng"
            android:textColor="@color/gray_828282"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_dotted_line2" />

        <TextView
            android:id="@+id/tv_total_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="end"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_label"
            app:layout_constraintTop_toBottomOf="@id/view_dotted_line2" />

        <TextView
            android:id="@+id/tv_deadline_label"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="Hạn nộp"
            android:textColor="@color/gray_828282"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_deadline_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_label" />

        <TextView
            android:id="@+id/tv_deadline_value"
            android:layout_width="@dimen/size_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="end"
            android:textColor="@color/gray_232323"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_deadline_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:gravity="center"
        android:text="@string/reminderLabel"
        android:textColor="@color/gray_4F4F4F"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_fee_detail" />

    <TextView
        android:id="@+id/tv_unpaid_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/bg_red_radius_40"
        android:paddingHorizontal="@dimen/size_20"
        android:paddingVertical="@dimen/size_12"
        android:text="@string/unpaidStatus"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reminder" />

    <TextView
        android:id="@+id/tv_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24"
        android:justificationMode="inter_word"
        android:text="@string/detailContent"
        android:textColor="@color/gray_4F4F4F"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_unpaid_label" />


</androidx.constraintlayout.widget.ConstraintLayout>