<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size_24"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/llNote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/llNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="@dimen/size_20"
            android:text="Nhà trường sẽ trả bé cho người đón mặc định.
            \n\nTrong trường hợp muốn thay đổi người đón, phụ huynh cần tạo đơn đón mới 30 phút trước giờ đón.
            \n\nNhà trường chỉ chấp nhận người đón có gương mặt giống với hình ảnh đã được cung cấp."
            android:textColor="@color/gray_4F4F4F"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="@dimen/size_62"
        android:layout_height="@dimen/size_62"
        android:src="@drawable/ic_floating_add"
        android:padding="@dimen/size_5"
        android:background="@drawable/ripple_clicked"
        android:layout_marginBottom="@dimen/size_50"
        android:layout_marginEnd="@dimen/size_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>