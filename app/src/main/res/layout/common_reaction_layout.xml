<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_heart"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_24"
        android:src="@drawable/ic_love_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_number_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_4"
        android:text="12"
        android:textColor="@color/gray_828282"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_heart"
        app:layout_constraintStart_toEndOf="@id/img_heart"
        app:layout_constraintTop_toTopOf="@id/img_heart" />

    <ImageView
        android:id="@+id/img_comment"
        android:layout_width="@dimen/size_28"
        android:layout_height="@dimen/size_24"
        android:layout_marginStart="@dimen/size_16"
        android:src="@drawable/ic_comment"
        app:layout_constraintStart_toEndOf="@id/tv_number_heart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_number_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_4"
        android:text="120"
        android:textColor="@color/gray_828282"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_comment"
        app:layout_constraintStart_toEndOf="@id/img_comment"
        app:layout_constraintTop_toTopOf="@id/img_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>